<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Zip_Code_Validator</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Zip_Code__c , &quot;^\\d{5}(?:[-\\s]\\d{4})?$&quot;))</errorConditionFormula>
    <errorDisplayField>Zip_Code__c</errorDisplayField>
    <errorMessage>Invalid Zip Code (XXXXX or XXXXX-XXXX)</errorMessage>
</ValidationRule>
